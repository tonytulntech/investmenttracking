rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection - users can only read/write their own data
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Transactions collection - users can only access their own transactions
    match /transactions/{transactionId} {
      allow read, write: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    // Portfolios collection - users can only access their own portfolio
    match /portfolios/{portfolioId} {
      allow read, write: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    // Price cache collection - read-only for all authenticated users, write for server only
    match /priceCache/{ticker} {
      allow read: if isAuthenticated();
      allow write: if false; // Only server can write (via Cloud Functions if needed)
    }
  }
}
